    "version": "0.2.0",
    "configurations": [
        {
            "name": "nemu-riscv32",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "program": "${workspaceFolder}/nemu/build/riscv32-nemu-interpreter",
            "args": [
                "xx",
                "../tools/gen-expr/input"
            ],
            "cwd": "${workspaceFolder}/nemu/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "nemu-gen-expr",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "program": "${workspaceFolder}/nemu/tools/gen-expr/build/gen-expr",
            "args": [
                "10000"
            ],
            "cwd": "${workspaceFolder}/nemu/tools/gen-expr/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}